<div class="uploader">
	<!-- the real input[type=file] is hidden -->
	<input type="file" name="uploader" style="display:none;"
		 onchange="angular.element(this).scope().sendFile(this);"/>

	<!-- input field, used to open the real input[type=file]  -->
	<div class="fake-uploader">
		<label for="uploader" class="labelForUploader"></label>
		<input type="text" readonly="readonly" data-ng-model="avatar"/>
	</div>

	<!-- progress bar -->
	<div class="progress" data-ng-show="progress!=0">
		<div class="bar" style="width:{{progress}}%;"></div>
	</div>

</div>

<!-- preview -->
<div data-ng-if="avatar != ''" style="margin: 10px 0 0;height:320px;width:320px;overflow:auto;">
	<img data-ng-src="/UploadedFiles/{{avatar}}"/ style="height:320px;width:320px;">
</div>